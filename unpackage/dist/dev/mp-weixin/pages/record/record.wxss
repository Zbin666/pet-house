
.page.data-v-ef6850c5 {
    padding: 24rpx;
    /* 顶部额外间距已移除，遵循原生导航栏 */
    min-height: 100vh;
    background: linear-gradient(180deg, #fff1a8 0%, #fff3c9 32%, #fff7e3 68%, #fffaf1 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

/* switch */
.switch-row.data-v-ef6850c5 {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16rpx;
    padding: 0 8rpx;
    width: 100%;
    max-width: 704rpx;
    box-sizing: border-box;
}
.switch-btn.data-v-ef6850c5 {
	position: relative;
	width: 48%;
	height: 96rpx;
	border-radius: 999rpx;
	border: 4rpx solid #2c2c2c;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #fff;
	box-shadow: 0 6rpx 0 rgba(0, 0, 0, 0.06) inset;
	transition: background 160ms ease, opacity 160ms ease, transform 160ms ease;
}
.switch-btn.yellow.data-v-ef6850c5 {
	background: #ffe46a;
}
.switch-btn.data-v-ef6850c5:not(.active) {
	opacity: .75;
}
.switch-btn.active.data-v-ef6850c5 {
	opacity: 1;
	transform: translateY(-2rpx);
}
.switch-btn text.data-v-ef6850c5 {
	font-weight: 700;
	color: #1a1a1a;
	font-size: 32rpx;
}
.switch-btn .dot.data-v-ef6850c5 {
	position: absolute;
	width: 22rpx;
	height: 22rpx;
	border: 4rpx solid #2c2c2c;
	border-radius: 50%;
	background: #fff;
	top: 50%;
	transform: translateY(-50%);
}
.switch-btn .dot.left.data-v-ef6850c5 {
	left: 30rpx;
}
.switch-btn .dot.right.data-v-ef6850c5 {
	right: 23rpx;
	left: auto;
}

/* card dots */
.card-dots.data-v-ef6850c5 {
	position: relative;
	height: 0;
}
.card-dot.data-v-ef6850c5 {
	position: absolute;
	width: 22rpx;
	height: 22rpx;
	border: 4rpx solid #2c2c2c;
	border-radius: 50%;
	background: #fff;
	top: -9rpx;
}
.card-dot.record-left.data-v-ef6850c5 {
	left: 14rpx;
}
.card-dot.record-right.data-v-ef6850c5 {
	left: calc(24% + 112rpx);
}
.card-dot.stats-left.data-v-ef6850c5 {
	left: calc(52% + 30rpx);
}
.card-dot.stats-right.data-v-ef6850c5 {
	right: 6rpx;
	left: auto;
}

/* vertical connectors (yellow pillars) */
.connectors.data-v-ef6850c5 {
    position: relative;
    height: 0rpx;
    z-index: 3;
    width: 100%;
    max-width: 704rpx;
}
.connector.data-v-ef6850c5 {
	position: absolute;
	height: 32rpx;
	z-index: 3;
}

/* each image already contains two yellow pillars */
.connector.record.data-v-ef6850c5 {
	left: 20px;
	top: -35px;
	width: calc(24% + 104rpx);
}
.connector.stats.data-v-ef6850c5 {
	left: calc(52% + 32rpx);
	top: -35px;
	width: calc(48% - 65rpx);
}


/* card */
.card.data-v-ef6850c5 {
	background: #fff;
	border-radius: 24rpx;
	padding: 18rpx 24rpx 12rpx 24rpx;
	border: 4rpx solid #2c2c2c;
	position: relative;
	z-index: 1;
}

/* main sections width constraint */
.section.data-v-ef6850c5 {
    width: 100%;
    max-width: 704rpx;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
