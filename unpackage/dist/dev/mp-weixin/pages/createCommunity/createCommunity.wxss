
.page.data-v-d3a0ca1a {
	min-height: 100vh;
	background: linear-gradient(180deg, #fff1a8 0%, #fff3c9 32%, #fff7e3 68%, #fffaf1 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

/* 内容区域 */
.content.data-v-d3a0ca1a {
    padding: 30rpx 56rpx; /* 增加左右留白 */
    padding-top: calc(30rpx + env(safe-area-inset-top));
    padding-top: calc(30rpx + constant(safe-area-inset-top));
    width: 100%;
    max-width: 704rpx; /* 限制内容最大宽度，增强左右留白效果 */
    box-sizing: border-box;
}

/* 发布类型选择 */
.type-selector.data-v-d3a0ca1a {
    display: flex;
    background: #fff;
    border: 4rpx solid #2c2c2c;
    border-radius: 20rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 6rpx 0 #2c2c2c;
    overflow: hidden;
}
.type-btn.data-v-d3a0ca1a {
    flex: 1;
    padding: 20rpx;
    text-align: center;
    background: #fff;
    color: #666;
    font-size: 28rpx;
    font-weight: 600;
    transition: all 0.3s ease;
}
.type-btn.active.data-v-d3a0ca1a {
    background: #2c2c2c;
    color: #fff;
}

/* 用户信息 */
.user-info.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
	margin-bottom: 30rpx;
}
.user-avatar.data-v-d3a0ca1a {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	border: 2rpx solid #2c2c2c;
	background: #f5f5f5;
}
.user-details.data-v-d3a0ca1a {
	margin-left: 20rpx;
}
.username.data-v-d3a0ca1a {
	display: block;
	font-size: 30rpx;
	font-weight: 700;
	color: #2c2c2c;
}
.user-desc.data-v-d3a0ca1a {
	display: block;
	font-size: 24rpx;
	color: #7a7a7a;
	margin-top: 4rpx;
}

/* 标题输入区域 */
.title-input-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.title-input.data-v-d3a0ca1a {
	width: 100%;
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	line-height: 1.4;
}

/* 文本输入区域 */
.text-input-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.content-input.data-v-d3a0ca1a {
	width: 100%;
	min-height: 200rpx;
	font-size: 28rpx;
	line-height: 1.6;
	color: #333;
}
.placeholder.data-v-d3a0ca1a {
	color: #bbb;
}
.char-count.data-v-d3a0ca1a {
	text-align: right;
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
}

/* 图片上传区域 */
.image-upload-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.upload-title.data-v-d3a0ca1a {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c2c2c;
	margin-bottom: 20rpx;
}
.image-grid.data-v-d3a0ca1a {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 20rpx;
}
.image-item.data-v-d3a0ca1a {
	position: relative;
	aspect-ratio: 1;
	border-radius: 12rpx;
	overflow: hidden;
}
.uploaded-image.data-v-d3a0ca1a {
	width: 100%;
	height: 100%;
	background: #f3f3f3;
}
.delete-btn.data-v-d3a0ca1a {
	position: absolute;
	top: 8rpx;
	right: 8rpx;
	width: 40rpx;
	height: 40rpx;
	background: rgba(0, 0, 0, 0.6);
	color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	font-weight: bold;
}
.upload-btn.data-v-d3a0ca1a {
	aspect-ratio: 1;
	border: 2rpx dashed #ccc;
	border-radius: 12rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background: #fafafa;
}
.upload-icon.data-v-d3a0ca1a {
	font-size: 40rpx;
	color: #999;
	margin-bottom: 8rpx;
}
.upload-text.data-v-d3a0ca1a {
	font-size: 20rpx;
	color: #999;
}

/* 话题标签 */
.topic-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.topic-title.data-v-d3a0ca1a {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c2c2c;
	margin-bottom: 20rpx;
}

/* 话题标签列表 */
.topic-tags.data-v-d3a0ca1a {
	display: flex;
	flex-wrap: wrap;
	gap: 12rpx;
	margin-bottom: 20rpx;
}
.topic-tag.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
	background: #f0f0f0;
	border: 2rpx solid #ddd;
	border-radius: 20rpx;
	padding: 8rpx 16rpx;
	gap: 8rpx;
}
.tag-text.data-v-d3a0ca1a {
	font-size: 24rpx;
	color: #333;
}
.tag-remove.data-v-d3a0ca1a {
	width: 32rpx;
	height: 32rpx;
	background: #999;
	color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 20rpx;
	font-weight: bold;
}
.topic-input-wrapper.data-v-d3a0ca1a {
	background: #f8f8f8;
	border-radius: 12rpx;
	padding: 20rpx;
}
.topic-input.data-v-d3a0ca1a {
	width: 100%;
	font-size: 26rpx;
	color: #333;
}
.topic-placeholder.data-v-d3a0ca1a {
	color: #bbb;
}

/* 紧急标记区域 */
.urgent-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.urgent-title.data-v-d3a0ca1a {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c2c2c;
	margin-bottom: 20rpx;
}
.urgent-option.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
	gap: 12rpx;
}
.urgent-checkbox.data-v-d3a0ca1a {
	width: 40rpx;
	height: 40rpx;
	border: 4rpx solid #ddd;
	border-radius: 8rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background: #fff;
	transition: all 0.3s ease;
}
.urgent-checkbox.checked.data-v-d3a0ca1a {
	background: #ff6b35;
	border-color: #ff6b35;
	color: #fff;
}
.urgent-checkbox text.data-v-d3a0ca1a {
	font-size: 24rpx;
	font-weight: bold;
}
.urgent-label.data-v-d3a0ca1a {
	font-size: 26rpx;
	color: #333;
}

/* 位置信息 */
.location-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.location-item.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
}
.location-icon.data-v-d3a0ca1a {
	font-size: 28rpx;
	margin-right: 12rpx;
}
.location-text.data-v-d3a0ca1a {
	font-size: 26rpx;
	color: #333;
}

/* 发布按钮 */
.publish-btn.data-v-d3a0ca1a {
	position: fixed;
	bottom: 40rpx;
	left: 50%;
	transform: translateX(-50%);
	width: 200rpx;
	height: 80rpx;
	background: #2c2c2c;
	border-radius: 40rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8rpx 0 #1a1a1a;
	z-index: 100;
}
.publish-btn.data-v-d3a0ca1a:active {
	transform: translateX(-50%) translateY(4rpx);
	box-shadow: 0 4rpx 0 #1a1a1a;
}
.publish-text.data-v-d3a0ca1a {
	color: #fff;
	font-size: 32rpx;
	font-weight: 600;
}
