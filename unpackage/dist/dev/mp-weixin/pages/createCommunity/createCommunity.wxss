
.page.data-v-d3a0ca1a {
	min-height: 100vh;
	background: linear-gradient(180deg, #fff1a8 0%, #fff3c9 32%, #fff7e3 68%, #fffaf1 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
}

/* 内容区域 */
.content.data-v-d3a0ca1a {
    padding: 30rpx 56rpx; /* 增加左右留白 */
    padding-top: calc(30rpx + env(safe-area-inset-top));
    padding-top: calc(30rpx + constant(safe-area-inset-top));
    width: 100%;
    max-width: 704rpx; /* 限制内容最大宽度，增强左右留白效果 */
    box-sizing: border-box;
}

/* 用户信息 */
.user-info.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
	margin-bottom: 30rpx;
}
.user-avatar.data-v-d3a0ca1a {
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	border: 2rpx solid #2c2c2c;
	background: #f5f5f5;
}
.user-details.data-v-d3a0ca1a {
	margin-left: 20rpx;
}
.username.data-v-d3a0ca1a {
	display: block;
	font-size: 30rpx;
	font-weight: 700;
	color: #2c2c2c;
}
.user-desc.data-v-d3a0ca1a {
	display: block;
	font-size: 24rpx;
	color: #7a7a7a;
	margin-top: 4rpx;
}

/* 文本输入区域 */
.text-input-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.content-input.data-v-d3a0ca1a {
	width: 100%;
	min-height: 200rpx;
	font-size: 28rpx;
	line-height: 1.6;
	color: #333;
}
.placeholder.data-v-d3a0ca1a {
	color: #bbb;
}
.char-count.data-v-d3a0ca1a {
	text-align: right;
	font-size: 24rpx;
	color: #999;
	margin-top: 10rpx;
}

/* 图片上传区域 */
.image-upload-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.upload-title.data-v-d3a0ca1a {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c2c2c;
	margin-bottom: 20rpx;
}
.image-grid.data-v-d3a0ca1a {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 20rpx;
}
.image-item.data-v-d3a0ca1a {
	position: relative;
	aspect-ratio: 1;
	border-radius: 12rpx;
	overflow: hidden;
}
.uploaded-image.data-v-d3a0ca1a {
	width: 100%;
	height: 100%;
	background: #f3f3f3;
}
.delete-btn.data-v-d3a0ca1a {
	position: absolute;
	top: 8rpx;
	right: 8rpx;
	width: 40rpx;
	height: 40rpx;
	background: rgba(0, 0, 0, 0.6);
	color: #fff;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	font-weight: bold;
}
.upload-btn.data-v-d3a0ca1a {
	aspect-ratio: 1;
	border: 2rpx dashed #ccc;
	border-radius: 12rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background: #fafafa;
}
.upload-icon.data-v-d3a0ca1a {
	font-size: 40rpx;
	color: #999;
	margin-bottom: 8rpx;
}
.upload-text.data-v-d3a0ca1a {
	font-size: 20rpx;
	color: #999;
}

/* 话题标签 */
.topic-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.topic-title.data-v-d3a0ca1a {
	font-size: 28rpx;
	font-weight: 600;
	color: #2c2c2c;
	margin-bottom: 20rpx;
}
.topic-input-wrapper.data-v-d3a0ca1a {
	background: #f8f8f8;
	border-radius: 12rpx;
	padding: 20rpx;
}
.topic-input.data-v-d3a0ca1a {
	width: 100%;
	font-size: 26rpx;
	color: #333;
}
.topic-placeholder.data-v-d3a0ca1a {
	color: #bbb;
}

/* 位置信息 */
.location-area.data-v-d3a0ca1a {
	background: #fff;
	border: 4rpx solid #2c2c2c;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 6rpx 0 #2c2c2c;
}
.location-item.data-v-d3a0ca1a {
	display: flex;
	align-items: center;
}
.location-icon.data-v-d3a0ca1a {
	font-size: 28rpx;
	margin-right: 12rpx;
}
.location-text.data-v-d3a0ca1a {
	font-size: 26rpx;
	color: #333;
}
